{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "costCenterTag" :{
      "type" : "string",
      "allowedValues": [
        "1052",
        "1054",
        "1055",
        "1058",
        "1059"
      ],
      "metadata": {
        "description": "1052 - ITOps(Andrew); 1054 - Dev1(Dino); 1055 - Dev2(Daniel);1058 - InfoSec(Billy);1059 - Network/Storage(Jorge)"
          }      
    },
    "dataCenterTag" :{
      "type" : "string",
      "allowedValues": [
        "WestUS1",
        "WestUS2",
        "EastUS2",
        "WestCentralUS"
      ],
      "metadata": {
        "description": "Azure region where the resource will be deployed"
      }
    },
    "departmentTag" : {
      "type" : "string",
      "defaultValue": "InformationTechnology",
      "allowedValues": [
        "InformationTechnology"
      ],
      "metadata": {
        "description": "Department who owns the resources"
      }
    },
    "environmentTag" : {
      "type" : "string",
      "defaultValue": "",
      "allowedValues": [
        "Production",
        "Development",
        "Test"
      ],
      "metadata": {
        "description": "Environment where owns the resources reside"
      }
    },
    "supportGroupTag" : {
      "type" : "string",
      "defaultValue": "",
      "allowedValues": [
        "Infrastructure",
        "DevOps"
      ],
      "metadata": {
        "description": "Group who supports the Azure resource"
      }
    },
    "projectTag" : {
      "type" : "string",
      "defaultValue": "",
      "metadata": {
        "description": "Project or Application that the Azure resources belong to"
      }
    },
    "storageAccountName": {
      "type": "string",
      "metadata": {
        "Description": "The name of the new storage account created to store the VMs disks"
      }
    },
    "storageAccountType": {
      "type": "string",
      "allowedValues": [
        "Standard_LRS",
        "Premium_LRS"
      ],
      "metadata": {
        "Description": "The type of the Storage Account created"
      },
      "defaultValue": "Standard_LRS"
    },
    "storageAccountExistingRG": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "Description": "Resource Group Name of the existing Storage Account"
      }
    }
  },
  "resources": [
  ],
  "outputs": {
    "storageAccountId": {
      "value": "[resourceId(parameters('storageAccountExistingRG'),'Microsoft.Storage/StorageAccounts',parameters('storageAccountName'))]",
      "type": "string"
    }
  }
}
